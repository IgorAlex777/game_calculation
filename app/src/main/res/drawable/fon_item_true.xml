<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
   <item
        android:top="5dp"
        android:left="5dp">
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="280%"
                android:startColor="@color/silver"
                android:centerX="0.9"
                android:centerY="0.5"
                android:endColor="@color/silver" />

            <corners android:radius="10dp" />
        </shape>
    </item>
    <item
        android:right="5dp"
        android:bottom="5dp">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="@color/silver" />
            <gradient
                android:angle="-90"
                android:startColor="@color/grey0"
                android:endColor="@color/grey0" />
        </shape>
    </item>
